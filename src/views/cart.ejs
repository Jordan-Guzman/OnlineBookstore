<%- include("partials/header.ejs") %>
<body>
    <main>
        <h1 id="shopping-cart-header">Shopping Cart</h1>
        <a class="link" href="/home"> Back to Search </a>
        <hr>
        <div id="cart">
            <h1 id="books-header">BOOKS</h1>
            <% for(let i = 0; i < rows.length; i++) { %>
                <div class="cart-items-container">
                    <h3 class="cart-book-title"><%= rows[i].title %></h3>
                    <img class="cart-book-cover" src='<%= rows[i].imageUrl %>'><br><br>
                    <button class="remove-from-cart">Remove From Cart</button>
                </div>
                <% } %>
            </div>
            <br><br>
        <button id="checkout">Checkout</button>
    </main>
    <br><hr>
    <%- include("partials/footer.ejs") %>
</body>
</html>